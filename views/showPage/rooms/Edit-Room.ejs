<% layout("/layouts/boilerplate") -%> 
<br>
<div class="main-body-page bg-light p-2 " style="border-radius: 6px;">
    <div class="d-flex gap-2 cols m-1">
        <!-- "Add New Floor" Heading-->
        <div class="col-7">
            <p class="new-form-heading">Edit Room</p>
            
        </div>
        <!-- "<Back" Button-->
        <div class="col-6">
            <a href="./" style="color: #021e2b;" class="col-12 btn"> <i class="fa-solid fa-chevron-left"></i>  Back </a>
        </div>
    </div>
<hr>

    <div class="container student-box">


        <!-- COURSES DETAILS FORMS -->

        <!-- <div class=" contact-info" style=" padding: 100px;  background-color: rgba(0, 73, 168, 0.637);"> -->
          <form method="POST" action="/manageroom/<%=room._id%>?_method=PUT" class="row g-4 needs-validation" enctype="application/x-www-form-urlencoded">
             
                <div class="col-md-4">
                    <label for="validationCustom05" class="form-label">Floor Number </label>
                    <h2><%=room.floor_name%></h2>
              
                    <div class="invalid-feedback">
                      Please provide a valid Mobile.
                    </div>
                  </div>

              <div class="col-md-4">
                <label for="validationCustom05" class="form-label">Room Number</label>
                <h2><%=room.room_number%></h2>
                <div class="invalid-feedback">
                  Please provide a valid Mobile.
                </div>
              </div>
              <div class="col-md-4">
                <label for="validationCustom05" class="form-label">Fees Per Member </label>
                <input type="text" name="room[room_fees]" value="<%=room.room_fees%>" placeholder="Eg: 4000,5000" class="form-control" id="validationCustom05" maxlength="16"   required>
                <div class="invalid-feedback">
                  Please provide a valid Mobile.
                </div>
              </div>
                
                
                <div class="col-md-4">
                  <label for="validationCustom05" class="form-label"> Sharing Capacity</label>
                  <input type="number"name="room[sharing_capacity]"value="<%=room.sharing_capacity%>"  maxlength="10" class="form-control" id="validationCustom05"placeholder="Eg: 6,5,4" required>
                  <div class="invalid-feedback">
                    Please provide a valid Mobile No.
                  </div>
                </div>
                  

                  <div class="col-12 d-flex justify-content-center">
                    <button type="submit" class="col-6 btn btn-info">Update Room Details</button>
                </div>
                
            </form>
      <!-- </div> -->
    </div>
  </div>
</div>




















