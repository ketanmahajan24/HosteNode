<!-- FOR ACCESING BY DEFAULT "TODAY" DATE --><!-- START -->
<script>
  let today = new Date();
  let day = String(today.getDate()).padStart(2, '0');
  let month = String(today.getMonth() + 1).padStart(2, '0'); // Months are zero-based
  let year = today.getFullYear();
  let formattedDate = `${year}-${month}-${day}`; // Convert to yyyy-mm-dd format for input type="date"

  document.getElementById("validationCusto1").value = formattedDate;
</script>
<!-- END -->