<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">


    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    
    <!-- FontAwesome Icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>

    <style>
        /* Sidebar */
        .sidebar {
            position: fixed;
            width: 230px;
            height: 100%;
            background: #222831;
            color: white;
            padding: 20px;
            transition: all 0.3s;
        }

        .sidebar h2 {
            text-align: center;
            font-size: 20px;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .sidebar ul {
            padding: 0;
        }

        .sidebar ul li {
            list-style: none;
            padding: 10px;
            cursor: pointer;
            font-size: 15px;
            color: white;
            display: flex;
            align-items: center;
            transition: 0.3s;
            border-radius: 5px;
        }

        .sidebar ul li i {
            margin-right: 10px;
        }

        .sidebar ul li:hover, .sidebar ul li.active {
            background: #00ADB5;
        }

        /* Main Content */
        .main-content {
            margin-left: 250px;
            padding: 20px;
            background: #F5F7FA;
            min-height: 100vh;
            transition: all 0.3s;
        }

        .navbar {
            background: white;
            padding: 15px;
            border-radius: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* Cards */
        .card-custom {
            padding: 15px;
            border-radius: 10px;
            color: white;
            text-align: center;
        }

        .card-blue { background: linear-gradient(135deg, #007bff, #00ADB5); }
        .card-green { background: linear-gradient(135deg, #28a745, #00c851); }

        /* Table Styling */
        .table th {
            background: #00ADB5;
            color: white;
        }

        .table tbody tr:hover {
            background: #e3f2fd;
        }

        /* Dark Mode */
        body.dark-mode {
            background: #1B262C;
            color: white;
        }

        .dark-mode .navbar {
            background: #222831;
            color: white;
        }

        .dark-mode .card-custom {
            background: linear-gradient(135deg, #333, #555);
        }

        .dark-mode .table tbody tr:hover {
            background: #393E46;
        }

        /* Responsive Design */
        @media (max-width: 991px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
                text-align: center;
            }
            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Super Admin </h2>
        <ul>
            <li class="active"><i class="fas fa-tachometer-alt"></i> Dashboard</li>
            <li><i class="fas fa-user"></i> <%=admin.username%></li>
            <li><i class="fas fa-user"></i> <%=admin.email%></li>
            <li><i class="fas fa-cogs"></i> Settings</li>
            <li><i class="fas fa-sign-out-alt"></i> Logout </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <nav class="navbar">
            <h4>HostelNode</h4>
            <button id="darkModeToggle" class="btn btn-dark"> <i class="fa-solid fa-circle-half-stroke"></i> </button>
        </nav>

        <!-- Cards Section -->
        <div class="row g-3 mt-3">
            <div class="col-md-4 col-sm-6">
                <div class="card-custom card-blue">
                    <h6>Total Users</h6>
                    <h4><%= users.length %></h4>
                </div>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="card-custom card-green">
                    <h6>Active Hostels</h6>
                    <h4>8</h4>
                </div>
            </div>
        </div>

        <!-- User Table -->
        <div class="table-responsive mt-4">
            <input type="text" id="search" class="form-control mb-3" placeholder="Search users...">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Hostel Name</th>
                        <th>Signup Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="userTable">
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.username %></td>
                            <td><%= user.fullname %></td>
                            <td><%= user.email %></td>
                            <td><%= user.phone %></td>
                            <td><%= user.hostelName %></td>
                            <td><%= user.createdAt.toLocaleDateString() %></td>
                            <td><%= user.status %></td>
                            <td>
                                <form method="POST" action="/dashboard/<%=user._id%>?_method=PUT" class="row g-4 needs-validation" enctype="application/x-www-form-urlencoded">
                                             <button class="btn btn-sm btn-primary">Change Status</button>
                                </form> 
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Dark Mode Toggle
            $("#darkModeToggle").click(function () {
                $("body").toggleClass("dark-mode");
            });

            // Search Filter
            $("#search").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#userTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
</body>
</html>
